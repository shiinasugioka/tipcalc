<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tipcalc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Tipcalc" parent="Base.Theme.Tipcalc" />

    <style name="amount_text_styles">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2B2B2B</item>
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">@string/amount_text</item>
    </style>

    <style name="input_price_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">8</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/price_input_hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="submit_tip_button_styles">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:layout_width">176dp</item>
        <item name="android:layout_height">101dp</item>
        <item name="android:backgroundTint">#7BB3DC</item>
        <item name="android:text">@string/tip_button_text</item>
    </style>

    <style name="seekbar_styles">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:max">3</item>
        <item name="android:progress">0</item>
        <item name="android:progressBackgroundTint">#4C7491</item>
    </style>

    <style name="seekbar_middle_tick_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">57dp</item>
        <item name="android:layout_marginBottom">165dp</item>
    </style>

    <style name="seekbar_edge_tick_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">67dp</item>
        <item name="android:layout_marginEnd">57dp</item>
        <item name="android:layout_marginBottom">413dp</item>
    </style>
</resources>
