<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/amount_text"
        style="@style/amount_text_styles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/submit_tip_button"
        style="@style/submit_tip_button_styles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_text" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        style="@style/input_price_styles"
        app:layout_constraintBottom_toTopOf="@+id/submit_tip_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amount_text"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/seekbar_styles"
        app:layout_constraintBottom_toTopOf="@+id/submit_tip_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal" />

    <TextView
        android:id="@+id/seekbar_first"
        style="@style/seekbar_edge_tick_styles"
        android:text="@string/first_tick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/seekbar_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekbar_fourth" />

    <TextView
        android:id="@+id/seekbar_second"
        style="@style/seekbar_middle_tick_styles"
        android:text="@string/second_tick"
        app:layout_constraintBottom_toTopOf="@+id/submit_tip_button"
        app:layout_constraintStart_toEndOf="@+id/seekbar_first"
        app:layout_constraintTop_toTopOf="@+id/seekbar_fourth" />

    <TextView
        android:id="@+id/seekbar_third"
        style="@style/seekbar_middle_tick_styles"
        android:text="@string/third_tick"
        app:layout_constraintBottom_toTopOf="@+id/submit_tip_button"
        app:layout_constraintStart_toEndOf="@+id/seekbar_second"
        app:layout_constraintTop_toTopOf="@+id/seekbar_fourth" />

    <TextView
        android:id="@+id/seekbar_fourth"
        style="@style/seekbar_edge_tick_styles"
        android:text="@string/fourth_tick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekbar_third"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />


</androidx.constraintlayout.widget.ConstraintLayout>